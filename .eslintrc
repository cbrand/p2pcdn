{
    "ecmaFeatures": {
        "classes": true,
        "modules": true
    },
    "env": {
        "mocha": true,
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "quotes": [2, "single"],
        "strict": 0,
        "no-underscore-dangle": 0,
        "no-constant-condition": 0,
        "new-cap": 0,
        "no-unused-expressions": 0
    }
}
